<%- include('./partials/head.ejs') %> 
  <style>
        span{
            font-weight: bolder;
        }
        td{
            padding: 12px;
        }
        span.mandatory{
            font-weight: normal;
        }
        .displayNone{
            display: none;
            font-size: 12px;
            color: red;
        }
    </style>
</head>
<body>

    <h2 style="text-align:center;margin-bottom:3px;">REGISTRATION FORM</h2>
    <p style="text-align:center;">
        <span style="cursor:pointer;" id="previousPage"><i class="fas fa-chevron-circle-left fa-1x"></i>
        </span>
    </p>
    <p id="error" style="display:none;color:red;font-weight:bolder;text-align:center;"></p>
    <form>
        <table style="margin-left:auto;margin-right:auto;">
            <tr>
                <td>
                    <span>Username</span><span class="mandatory">*</span><br />
                    <input type="text" name="username" id="username" required />
                </td>
            </tr>
            <tr>
                <td>
                    <span>First Name</span><span class="mandatory">*</span><br />
                    <input type="text" name="firstName" id="firstName" required />
                </td>
                <td>
                    <span>Last Name</span><span class="mandatory">*</span><br />
                    <input type="text" name="lastName" id="lastName" required />
                </td>
            </tr>
            <tr>
                <td>
                    <span>Email</span><span class="mandatory">*</span><br />
                    <input type="text" name="email" id="email" required /><br />
                    <span class="displayNone em">Enter a valid mail id</span>
                </td>
                <td>
                    <span>Mobile Number</span><span class="mandatory">*</span><br />
                    <input type="text" name="mobileNo" id="mobileNo" required /><br />
                    <span class="displayNone mNo">Enter a valid 10 digit mobile number</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span>House Number</span><span class="mandatory">*</span><br />
                    <input type="text" name="houseNo" id="houseNo" required />
                </td>
                <td>
                    <span>Street</span><span class="mandatory">*</span><br />
                    <input type="text" name="street" id="street" required />
                </td>
                <td>
                    <span>Area</span><span class="mandatory">*</span><br />
                    <input type="text" name="area" id="area" required />
                </td>
                <td>
                    <span>Landmark</span><span class="mandatory">*</span><br />
                    <input type="text" name="landmark" id="landmark" required />
                </td>
            </tr>
            <tr>
                <td>
                    <span>State</span><span class="mandatory">*</span><br />
                    <input type="text" name="state" id="state" required />
                </td>
                <td>
                    <span>City</span><span class="mandatory">*</span><br />
                    <input type="text" name="city" id="city" required />
                </td>
                <td>
                    <span>PIN Code</span><span class="mandatory">*</span><br />
                    <input type="text" name="pin" id="pin" required /><br />
                    <span class="displayNone pin">Enter a valid pin code</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Password</span><span class="mandatory">*</span><br />
                    <input type="password" name="password" id="password" required /><br />
                    <span class="displayNone pass">Enter a password with minimum length of 8</span>
                </td>
            </tr>
            <tr>
                <td>
                    <span>Confirm password</span><span class="mandatory">*</span><br />
                    <input type="password" name="confirmPassword" id="confirmPassword" required /><br />
                    <span class="displayNone pass1">Set the password first</span>
                    <span class="displayNone pass2">Enter the same password you entered above</span>
                </td>
            </tr>
        </table>
        <p style="text-align:center;" ><input type="submit" value="SUBMIT" /></p>
        <br />

    </form>
    <script src="/js/register.js"></script>
    <script>
        document.getElementById('previousPage').addEventListener('click', () => {
            window.history.back();
        });
    </script>

